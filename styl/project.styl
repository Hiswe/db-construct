.page-project h1 {
  color: $accent;
  text-align: center;
}

.project-image,
.project-content {
  list-style: none;
  padding: 0;
}

.project-image {
  list-style: none;

  .image-wrapper {
    image-ratio(800, 600);
  }
}

.project-content {
  +mq('>=S') {
    row();
  }

  +mq('>=L') {
    // wait masonry initialization
    &.is-loaded {
      display: block;
      margin-left: 0;
      margin-right: 0;
    }
    &:not(.is-loaded) .project-image {
      cell(1);
    }
    &:not(.is-loaded) .grid-item--width2 {
      cell(2);
    }
  }

  +mq('<L') {
    height: auto !important;
  }
}

.grid-sizer,
.grid-item {
  width: 100%;

  img {
    width: 100%;
    height: auto;
  }


  +mq('>=S') {
    cell(1, 2);
  }
  +mq('<L') {
    position: static !important;
  }
  +mq('>=L') {
    margin-left: 0;
    margin-right: 0;
    max-width: none;
    width: 'calc(%s - %s)' % (col(1) $gutter * 0.666 );
  }
}

.grid-item--width2 {

  +mq('>=L') {
    width: 'calc(%s - %s)' % (col(2) $gutter * 0.333 );
    .project-content:not(.is-loaded) & {
      cell(1, 1);
    }
  }
}

.project-description {
  +mq('<L') {
    cell(1, 1);
  }
  ul {
    padding-left: 1em;
  }
  li {
    list-style-image: url('bullet-list.svg');
  }
}

.grid-sizer {
  // border-top: 1px solid red;
  +mq('<M') {
    display: none;
  }
}

.project-description,
.project-image {
  margin-top: $gutter;
}
