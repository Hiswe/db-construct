.page-project h1 {
  color: $accent;
  text-align: center;
}

.project-image {
  list-style: none;
  padding: 0;
}

.project-image,
.project-content {
  list-style: none;
  padding: 0;
}

.project-content {
  +mq('>=S') {
    row();
  }

  +mq('>=L') {
    display: block;
    margin-left: 0;
    margin-right: 0;
  }

  +mq('<L') {
    height: auto !important;
  }
}
.grid-sizer,
.grid-item {
  width: 100%;

  img {
    width: 100%;
    height: auto;
  }


  +mq('>=S') {
    cell(1, 2);
  }
  +mq('<L') {
    position: static !important;
  }
  +mq('>=L') {
    margin-left: 0;
    margin-right: 0;
    max-width: none;
    width: 'calc(%s - %s)' % (col(1) $gutter * 0.666 );
  }
}

.grid-item--width2 {
  +mq('>=L') {
    width: 'calc(%s - %s)' % (col(2) $gutter * 0.333 );
  }
}

.project-description {
  +mq('==S') {
    cell(1, 1);
  }
  +mq('==M') {
    cell(1, 1);
  }
}

.grid-sizer {
  // border-top: 1px solid red;
  +mq('<M') {
    display: none;
  }
}

.project-description,
.project-image {
  margin-top: $gutter;
}
