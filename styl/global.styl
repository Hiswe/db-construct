*,
*::before,
*::after {
  box-sizing: border-box;
}

html {
  background: $bg;
  color: white;
  font-size: $fs;
  font-text();
}

body {
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

main {
  display: block;
  flex: 1 0 auto;
  container();
  margin: 0 auto;
  padding-bottom: $gutter;
}

img {
  max-width: 100%;
  display: block;
}

h1,
h2 {
  font-title();
}

dl,
dt,
dd {
  margin: 0;
}

ul {
  margin-top: 0;
  margin-bottom: 0;
}

input,
select,
textarea,
button {
  font: inherit;
  line-height: inherit;
  color: inherit;
}

textarea {
  resize: vertical;
}

footer {
  background: rgba(black, .4);
  padding: $gutter 0;
  text-align: center;
}

.page-title {
  text-align: center;
  color: $accent;
  text-transform: uppercase;
  border-bottom: 1px solid currentColor;
  margin: 0;
  padding: 0 0 $gutter;

  +mq('>=M') {
    display: none;
  }
}
