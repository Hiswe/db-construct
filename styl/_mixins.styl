//////
// LAYOUT
//////

container() {
  max-width: $max-width;
  width: 'calc(%s - %s)' % (100% $gutter);

  +mq('>=M') {
    width: 'calc(%s - %s)' % (100% ($gutter * 2));
  }
}

//----- GRID

$cols             = 12;
$big-gutter       = ($gutter * 2);

row($$gutter = $gutter) {
  margin-left: $$gutter * -.5;
  margin-right: @margin-left;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

col($i = 1, $$cols = $cols){
  return ((100% / $$cols) * $i);
}

cell($i = 1, $$cols = $cols, $$gutter = $gutter) {
  flex-basis: 'calc(%s - %s)' % (col($i, $$cols) $$gutter);
  max-width: @flex-basis;
}
