hidden-accessible() {
  border: 0 !important;
  clip: rect(0 0 0 0) !important;
  height: 1px !important;
  margin: -1px !important;
  overflow: hidden !important;
  padding: 0 !important;
  position: absolute !important;
  width: 1px !important;
}

flex-center-align() {
  display: flex;
  align-items: center;
  justify-content: center;
}

//////
// MEDIA QUERIES
//////

// $small-range      = 0, px2em(639);
// $medium-range     = px2em(640), px2em(1023);
// $large-range      = px2em(1024);

$small-range      = 0, 639px;
$medium-range     = 640px, 1023px;
$large-range      = 1024px;

$max-width        = $large-range;

mq($$size) {
  if ($$size == "==S") {
    @media only screen and (max-width: $small-range[1]) {
      {block}
    }
  } else if ($$size == ">=M" ) {
    @media only screen and (min-width: $medium-range[0]) {
      {block}
    }
  } else if ($$size == "==M") {
    @media only screen and (min-width: $medium-range[0]) and (max-width: $medium-range[1]) {
      {block}
    }
  } else if ($$size == "<=M") {
    @media only screen and (max-width: $medium-range[1]) {
      {block}
    }
  } else if ($$size == ">=L") {
    @media only screen and (min-width: $large-range[0]) {
      {block}
    }
  } else {
    {block}
  }
}

//////
// CONTAINER
//////

container() {
  padding-left: 'calc(50% - %s)' % ($large-range / 2);
  padding-right: @padding-left;
}

//////
// GRID
//////

$cols             = 12;
$big-gutter       = ($gutter * 2);

col($i = 1, $$cols = $cols){
  return ((100% / $$cols) * $i);
}
cell($i = 1, $$cols = $cols, $$gutter = $gutter) {
  flex-basis: 'calc(%s - %s)' % (col($i, $$cols) $$gutter);
  // flex-basis: col($i, $$cols);
  // needed for firefox and IE
  max-width: @flex-basis;
  // padding: ($$gutter * .5)

  // @media (max-width:599px) {
  //   flex-basis: 'calc(%s - %s)' % (100% $$gutter);
  //   max-width: @flex-basis;
  // }
}

row($$gutter = $gutter) {
  // margin: 0 ($$gutter * -.5);
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;

  > .cell,
  > [class^='cell-'],
  > [class*=' cell-'] {
    margin: 0 ($$gutter * .5);
  }
}
