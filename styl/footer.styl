footer {
  background: rgba(black, .4);
  padding: $gutter;

  +mq('>=M') {
    padding: $gutter 0 ;
    text-align: left;
  }

  a {
    color: $accent;
    text-decoration: none;

    &:hover {
      text-decoration: underline;
    }
  }

  .in {
    container();
    margin: 0 auto;
  }
}

.footer {
  row();
  +mq('==M') {
    justify-content: flex-end;
  }
}

.footer-name {
  cell(1, 1);
  text-align: center;

  +mq('>=M') {
    cell(1, 2);
    text-align: left;
  }
}

.footer-adress,
.footer-contact {
  cell(1, 1);

  +mq('>=S') {
    cell(1, 2);
  }
}

.footer-adress {
  padding-top: $half-gutter;

  +mq('>=L') {
    padding-top: 0;
  }
  dt {
    text-align: center;
  }
}

.footer-contact,
.footer-adress,
.footer-name {
  // +mq('>=M') {
  //   cell(1, 2);
  // }
  +mq('>=L') {
    cell(1);
  }
}

.footer dl {
  display: flex;
  flex-wrap: wrap;

  dt {
    flex: 0 0 45px;
  }
  dd {
    flex-basis: calc(100% - 45px);
    padding-bottom: $half-gutter;
    padding-top: 4px;
    // IE 10 support
    // https://github.com/philipwalton/flexbugs#8-flex-basis-doesnt-support-calc
    width: @flex-basis;

    &.footer-facebook {
      padding-top: 8px;
    }
  }
  span {
    display: block;

    ~ span {
      margin-top: $half-gutter;
    }
  }
}

.copyright {
  display: block;
  text-align: center;

  .footer-name & {
    display: none;
  }

  a {
    color: white;
  }

  +mq('>=M') {
    display: none;
    text-align: left;

    .footer-name & {
      display: block;
    }
  }
}
