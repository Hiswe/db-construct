body::before {
  // content: '';
  display: block;
  border-left: 1px solid red;
  border-right: @border-left;
  position: fixed;
  left: 50%;
  height: 100vh;
  transform: translateX(-50%);
  z-index: $zindex--debug;
  container();
}

.demo-grid {
  container();
  position: fixed;
  z-index: $zindex--debug - 1;
  top: 0;
  left: $gutter;
  right: @left;
  bottom: 0;
  pointer-events: none;
  display: none;

  +mq('>=M') {
    // width: 100%;
    left: 50%;
    right: 0;
    transform: translateX(-50%);
  }

  ul, li {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  ul {
    row();
  }

  li {
    cell(1, 1);
    height: 100vh;
    background: rgba(cyan, .3);
    // padding: 0 $half-gutter;
    background-clip: content-box;
    position: relative;

    +mq('>=M') {
      cell(1, 2);
    }

    +mq('>=L') {
      cell(1, 3);
    }

    &:nth-child(2) {
      display: none;

      +mq('>=M') {
        display: block;
        // outline: 0;
      }
    }

    &:nth-child(3) {
      display: none;

      +mq('>=L') {
        display: block;
      }
    }
  }
}
