.process-step {
  +mq('>=M') {
    row();
    padding-top: $gutter;
    align-items: center;
  }
  dt {
    font-title();
    padding: $gutter $half-gutter;
    text-align: center;
    font-size: 24px;


    +mq('>=M') {
      text-align: left;
      font-size: 24px;
      cell(1);
    }
  }
  dd {
    &:first-of-type {
      padding: 0 $gutter $gutter;
      +mq('>=M') {
        cell(2);
      }
    }
    &:last-of-type {
      +mq('>=M') {
        cell(1, 1);
      }
    }
  }
  .image-wrapper {
    image-ratio(580, 400);
    +mq('>=M') {
      image-ratio(880, 420);
    }

    +mq('>=L') {
      image-ratio(920, 420);
    }
  }

  +mq('>=M') {
    dt,
    dd:first-of-type {
      padding: 0 0 $half-gutter;
    }
  }
}
.page-process {
  .carrousel-progress {
    display: none;
  }
  .carrousel-control {
    position: absolute;
    bottom: ($half-gutter / 2);
    right: $half-gutter;
    vertical-align: bottom;
  }
  .js-prev,
  .js-next {
    position: static;
    display: inline-block;
    transform: none;
    background: rgba(black, .5);
  }
  .js-next {
    margin-left: ($half-gutter / 2);
  }
  svg {
    display: block;
  }
}
