header {
  text-align: center;
  max-width: $large-range;
  width: 100%;
  margin: 0 auto;

  +mq('>=M') {
    display: flex;
  }
  +mq('>=L') {
    margin-top: $gutter;
    position: relative;
    z-index: $zindex--header;
  }
}

nav {
  display: none;
  background: $primary;
  flex: 1 0 auto;

  +mq('>=M') {
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
  }

  a {
    padding: 1em;
    color: white;
    text-decoration: none;
    border-bottom: 4px solid transparent;

    &.is-selected {
      border-bottom-color: $accent;
    }

    &:hover {
      text-decoration: underline;
    }
  }
}

.logo {
  display: inline-block;
  padding: $half-gutter 0;

  +mq('>=M') {
    padding: 0;
    margin-right: ($gutter * 2);
  }

  img {
    +mq('==S') {
      display: inline;
      width: 50%;
      height: auto;
    }
  }
}
