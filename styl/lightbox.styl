.lightbox-wrapper {
  display: none;
  background: rgba(black, .8);
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: $zindex--lightbox;


  &.is-open {
    display: block;
  }
}

.lightbox-close {
  position: absolute;
  top: $gutter;
  right: @top;
  cursor: pointer;
}

.lightbox-image {
  position: absolute;
  top: ($gutter * 2);
  left: @top;
  right: @top;
  bottom: @top;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center center;
  opacity: 0;
  transition: opacity, .25s;

  &.is-loaded {
    opacity: 1;
  }
}
