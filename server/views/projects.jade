extends _layout.jade

block content
  .projects
    for project in projects
      dl
        dt: a(href="/project/" + project.name)= __('projects.' + project.name + '.title')
        dd: a(href="/project/" + project.name)
          picture
            //- source(media="(max-width: 640px)" srcset="/image/600x450 1x, /image/1200x900 2x")
            //- img(src="/image/600x350", srcset="/image/600x350 1x, /image/1200x700 2x")
            source(media="(max-width: 640px)" srcset="/images/project/#{project.name}/#{project.name}-cover-medium.jpg 1x, /images/project/#{project.name}/#{project.name}-cover-medium@2x.jpg 2x")
            img(src="/images/project/#{project.name}/#{project.name}-cover-small.jpg", srcset="/images/project/#{project.name}/#{project.name}-cover-small.jpg 1x, /images/project/#{project.name}/#{project.name}-cover-small@2x.jpg 2x")
